<%# 購買決策助手結果 %>
<div id="decision-result" class="space-y-4">
  <%
    recommendation_colors = {
      "推薦" => { bg: "bg-green-50", border: "border-green-200", text: "text-green-800", icon_bg: "bg-green-500" },
      "考慮" => { bg: "bg-yellow-50", border: "border-yellow-200", text: "text-yellow-800", icon_bg: "bg-yellow-500" },
      "不推薦" => { bg: "bg-red-50", border: "border-red-200", text: "text-red-800", icon_bg: "bg-red-500" }
    }
    colors = recommendation_colors[result[:recommendation]] || recommendation_colors["考慮"]
  %>

  <!-- 主要建議 -->
  <div class="p-5 rounded-xl <%= colors[:bg] %> border <%= colors[:border] %>">
    <div class="flex items-start gap-4">
      <!-- 評分圓環 -->
      <div class="flex-shrink-0">
        <div class="relative w-16 h-16">
          <svg class="w-16 h-16 transform -rotate-90">
            <circle cx="32" cy="32" r="28" stroke="currentColor" stroke-width="4" fill="none" class="text-neutral-200"/>
            <circle cx="32" cy="32" r="28" stroke="currentColor" stroke-width="4" fill="none"
                    class="<%= colors[:text] %>"
                    stroke-dasharray="<%= (result[:fit_score] / 100.0 * 175.93).round %> 175.93"
                    stroke-linecap="round"/>
          </svg>
          <span class="absolute inset-0 flex items-center justify-center text-lg font-semibold <%= colors[:text] %>">
            <%= result[:fit_score] %>
          </span>
        </div>
      </div>

      <!-- 建議內容 -->
      <div class="flex-1">
        <div class="flex items-center gap-2 mb-2">
          <span class="px-2 py-1 text-xs font-medium rounded-full text-white <%= colors[:icon_bg] %>">
            <%= result[:recommendation] %>
          </span>
          <span class="text-sm <%= colors[:text] %>">適合度分數</span>
        </div>
        <p class="text-neutral-700"><%= result[:summary] %></p>
      </div>
    </div>
  </div>

  <!-- 推薦理由 -->
  <% if result[:reasons].any? %>
    <div class="space-y-2">
      <h4 class="text-sm font-medium text-neutral-500">推薦理由</h4>
      <ul class="space-y-2">
        <% result[:reasons].each do |reason| %>
          <li class="flex items-start gap-2 text-sm text-neutral-700">
            <span class="text-green-500 mt-0.5">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </span>
            <%= reason %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- 注意事項 -->
  <% if result[:concerns].any? %>
    <div class="space-y-2">
      <h4 class="text-sm font-medium text-neutral-500">注意事項</h4>
      <ul class="space-y-2">
        <% result[:concerns].each do |concern| %>
          <li class="flex items-start gap-2 text-sm text-neutral-700">
            <span class="text-yellow-500 mt-0.5">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
            </span>
            <%= concern %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- 替代建議 -->
  <% if result[:alternatives].present? %>
    <div class="p-4 bg-blue-50 rounded-lg border border-blue-100">
      <p class="text-sm text-blue-800">
        <span class="font-medium">建議：</span>
        <%= result[:alternatives] %>
      </p>
    </div>
  <% end %>
</div>
