<div class="max-w-5xl mx-auto px-6 lg:px-8 py-16">
  <!-- Header -->
  <div class="text-center mb-12">
    <h1 class="text-3xl font-medium mb-3">AI 購物顧問</h1>
    <p class="text-neutral-500">用自然語言描述你想學什麼，AI 幫你找到最適合的課程</p>
  </div>

  <!-- Airbnb-style Search Box -->
  <div class="max-w-3xl mx-auto mb-12">
    <form action="/ai/search" method="get" data-turbo="false">
      <!-- Mode Tabs -->
      <div class="flex justify-center mb-6">
        <div class="inline-flex bg-neutral-100 rounded-full p-1">
          <% [
            { value: 'explore', label: '探索', desc: '對話式' },
            { value: 'economy', label: '快速', desc: '節省成本' },
            { value: 'premium', label: '專業', desc: '高品質' }
          ].each do |mode| %>
            <label class="relative cursor-pointer">
              <input type="radio" name="mode" value="<%= mode[:value] %>"
                     <%= @mode.to_s == mode[:value] ? 'checked' : '' %>
                     class="peer sr-only">
              <span class="block px-5 py-2 rounded-full text-sm font-medium transition-all
                           peer-checked:bg-white peer-checked:shadow-sm peer-checked:text-purple-700
                           text-neutral-600 hover:text-neutral-900">
                <%= mode[:label] %>
                <span class="hidden sm:inline text-xs text-neutral-400 ml-1">(<%= mode[:desc] %>)</span>
              </span>
            </label>
          <% end %>
        </div>
      </div>

      <!-- Slot-based Search Bar (Airbnb style) -->
      <div class="bg-white rounded-full shadow-lg border border-neutral-200 p-2 flex items-center">
        <!-- Topic Slot -->
        <div class="flex-1 px-4 py-2 border-r border-neutral-200">
          <label class="block text-xs font-medium text-neutral-500 mb-1">主題</label>
          <input type="text"
                 name="q"
                 value="<%= @query %>"
                 placeholder="想學什麼..."
                 class="w-full text-sm text-neutral-900 placeholder-neutral-400 focus:outline-none bg-transparent">
        </div>

        <!-- Budget Slot (optional, auto-extracted) -->
        <% if @slots[:budget_max] %>
          <div class="px-4 py-2 border-r border-neutral-200 hidden md:block">
            <label class="block text-xs font-medium text-neutral-500 mb-1">預算</label>
            <span class="text-sm text-neutral-900">< NT$ <%= number_with_delimiter(@slots[:budget_max]) %></span>
          </div>
        <% end %>

        <!-- Level Slot (optional, auto-extracted) -->
        <% if @slots[:level] %>
          <div class="px-4 py-2 border-r border-neutral-200 hidden md:block">
            <label class="block text-xs font-medium text-neutral-500 mb-1">難度</label>
            <span class="text-sm text-neutral-900"><%= @slots[:level] %></span>
          </div>
        <% end %>

        <!-- Search Button -->
        <button type="submit"
                class="ml-2 p-3 rounded-full bg-gradient-to-r from-purple-600 to-pink-500 text-white hover:shadow-lg transition-shadow cursor-pointer">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </button>
      </div>
    </form>

    <!-- Quick Examples -->
    <div class="flex flex-wrap justify-center gap-2 mt-4">
      <% ["便宜的程式入門課", "進階 JavaScript 教學", "行銷策略課程", "設計軟體教學"].each do |example| %>
        <%= link_to example,
            ai_search_path(q: example, mode: @mode),
            class: "px-3 py-1.5 text-sm text-neutral-500 bg-neutral-100 rounded-full hover:bg-neutral-200 transition-colors" %>
      <% end %>
    </div>
  </div>

  <!-- Error Message -->
  <% if @error %>
    <div class="max-w-2xl mx-auto p-4 bg-red-50 text-red-700 rounded-xl mb-8 flex items-center gap-3">
      <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
      </svg>
      <%= @error %>
    </div>
  <% end %>

  <!-- Clarification Question (Explore Mode) -->
  <% if @clarification_question && @state == :gathering %>
    <div class="max-w-2xl mx-auto p-6 bg-purple-50 rounded-2xl mb-8">
      <div class="flex items-start gap-4">
        <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div>
          <p class="text-purple-900 font-medium mb-3"><%= @clarification_question %></p>
          <!-- Quick Answer Buttons -->
          <div class="flex flex-wrap gap-2">
            <% %w[入門 進階 專家].each do |level| %>
              <%= link_to level,
                  ai_search_path(q: "#{@query} #{level}", mode: :explore),
                  class: "px-4 py-2 text-sm bg-white text-purple-700 rounded-full border border-purple-200 hover:bg-purple-100 transition-colors" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if @query.present? && @results %>
    <!-- Extracted Slots Display -->
    <% if @slots.any? %>
      <div class="mb-6 flex flex-wrap items-center gap-2">
        <span class="text-sm text-neutral-500">AI 理解：</span>
        <% @slots.each do |key, value| %>
          <% next if value.blank? %>
          <span class="px-3 py-1 text-sm bg-purple-100 text-purple-700 rounded-full">
            <%= { topic: '主題', budget_max: '預算', level: '難度', learning_goal: '目標', time_commitment: '時間' }[key.to_sym] || key %>:
            <%= key.to_s == 'budget_max' ? "< NT$#{number_with_delimiter(value)}" : value %>
          </span>
        <% end %>
      </div>
    <% end %>

    <!-- Intent Understanding (Legacy support) -->
    <% if @intent && !@slots.any? %>
      <div class="mb-8 p-4 bg-purple-50 rounded-xl">
        <div class="flex items-center gap-2 text-purple-800">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>
          <span class="font-medium">AI 理解</span>
        </div>
        <p class="mt-2 text-neutral-700"><%= @intent[:user_need] %></p>
        <div class="flex flex-wrap gap-2 mt-2">
          <% (@intent[:keywords] || []).each do |keyword| %>
            <span class="px-2 py-1 text-xs bg-purple-100 text-purple-700 rounded-full"><%= keyword %></span>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Mode & Cost Info Badge -->
    <% if @actual_mode || @cost_estimate %>
      <div class="mb-4 flex items-center gap-3">
        <% case @actual_mode %>
        <% when :explore %>
          <span class="px-3 py-1 text-xs bg-purple-100 text-purple-700 rounded-full flex items-center gap-1">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z"/></svg>
            探索模式
          </span>
        <% when :economy %>
          <span class="px-3 py-1 text-xs bg-green-100 text-green-700 rounded-full flex items-center gap-1">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"/><path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd"/></svg>
            經濟模式
          </span>
        <% when :premium %>
          <span class="px-3 py-1 text-xs bg-amber-100 text-amber-700 rounded-full flex items-center gap-1">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5 2a2 2 0 00-2 2v14l3.5-2 3.5 2 3.5-2 3.5 2V4a2 2 0 00-2-2H5zm2.5 3a1.5 1.5 0 100 3 1.5 1.5 0 000-3zm6.207.293a1 1 0 00-1.414 0l-6 6a1 1 0 101.414 1.414l6-6a1 1 0 000-1.414zM12.5 10a1.5 1.5 0 100 3 1.5 1.5 0 000-3z" clip-rule="evenodd"/></svg>
            專業模式
          </span>
        <% end %>
        <% if @cost_estimate && @cost_estimate[:estimated_cost_usd] %>
          <span class="text-xs text-neutral-400">
            預估成本: $<%= '%.4f' % @cost_estimate[:estimated_cost_usd] %>
          </span>
        <% end %>
        <% if @relaxed %>
          <span class="text-xs text-amber-600 flex items-center gap-1">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            <% if @relaxed_constraints.present? %>
              已放寬：<%= @relaxed_constraints.join('、') %>
            <% else %>
              已放寬搜尋條件
            <% end %>
          </span>
        <% end %>
      </div>
    <% end %>

    <!-- Results Explanation -->
    <% if @explanation %>
      <div class="mb-6">
        <p class="text-neutral-600"><%= @explanation %></p>
      </div>
    <% end %>

    <!-- Results Grid -->
    <% if @results.any? %>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @results.each do |product| %>
          <%= render 'shared/product_card', product: product %>
        <% end %>
      </div>
    <% else %>
      <!-- No Results -->
      <div class="text-center py-16">
        <svg class="w-16 h-16 text-neutral-200 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="text-neutral-500">找不到符合條件的課程</p>
        <p class="text-sm text-neutral-400 mt-1">試試其他關鍵字或描述方式</p>

        <% if @suggestions.present? %>
          <div class="mt-6">
            <p class="text-sm text-neutral-500 mb-3">或許你想搜尋：</p>
            <div class="flex flex-wrap justify-center gap-2">
              <% @suggestions.each do |suggestion| %>
                <%= link_to suggestion,
                    ai_search_path(q: suggestion, mode: :explore),
                    class: "px-4 py-2 text-sm bg-purple-50 text-purple-700 rounded-full hover:bg-purple-100 transition-colors" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% elsif @query.blank? %>
    <!-- Empty state -->
    <div class="text-center py-16">
      <div class="w-20 h-20 bg-gradient-to-br from-purple-100 to-pink-100 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
      </div>
      <h2 class="text-xl font-medium text-neutral-900 mb-2">告訴 AI 你想學什麼</h2>
      <p class="text-neutral-500 max-w-md mx-auto">
        不需要精確的關鍵字，用自然語言描述你的學習目標，<br>
        AI 會幫你理解需求並推薦最適合的課程。
      </p>

      <!-- Feature Highlights -->
      <div class="grid md:grid-cols-3 gap-6 mt-12 max-w-3xl mx-auto text-left">
        <div class="p-6 bg-white rounded-xl border border-neutral-200">
          <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <h3 class="font-medium text-neutral-900 mb-1">對話式探索</h3>
          <p class="text-sm text-neutral-500">不確定要什麼？AI 會問你問題來理解需求</p>
        </div>
        <div class="p-6 bg-white rounded-xl border border-neutral-200">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-medium text-neutral-900 mb-1">智慧預算</h3>
          <p class="text-sm text-neutral-500">說「便宜的」我們就懂，自動篩選預算範圍</p>
        </div>
        <div class="p-6 bg-white rounded-xl border border-neutral-200">
          <div class="w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
          </div>
          <h3 class="font-medium text-neutral-900 mb-1">品質保證</h3>
          <p class="text-sm text-neutral-500">AI 評分系統確保推薦高品質課程</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
