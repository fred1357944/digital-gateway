<div class="min-h-[80vh] flex items-center justify-center px-6">
  <div class="w-full max-w-sm">
    <h1 class="text-3xl font-light mb-2">Create account</h1>
    <p class="text-sm text-neutral-500 mb-10">Start selling digital goods today.</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>

      <% if resource.errors.any? %>
        <div class="p-4 bg-red-50 border border-red-100 rounded-lg">
          <p class="text-sm text-red-600">
            <% resource.errors.full_messages.each do |message| %>
              <%= message %><br>
            <% end %>
          </p>
        </div>
      <% end %>

      <div>
        <%= f.label :email, "Email", class: "block text-xs text-neutral-500 uppercase tracking-wider mb-2" %>
        <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            placeholder: "you@example.com",
            class: "w-full px-0 py-3 border-0 border-b border-neutral-200 focus:border-neutral-900 focus:ring-0 bg-transparent text-sm placeholder-neutral-300 transition-colors" %>
      </div>

      <div>
        <%= f.label :password, "Password", class: "block text-xs text-neutral-500 uppercase tracking-wider mb-2" %>
        <%= f.password_field :password,
            autocomplete: "new-password",
            placeholder: "Min 6 characters",
            class: "w-full px-0 py-3 border-0 border-b border-neutral-200 focus:border-neutral-900 focus:ring-0 bg-transparent text-sm placeholder-neutral-300 transition-colors" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirm password", class: "block text-xs text-neutral-500 uppercase tracking-wider mb-2" %>
        <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            placeholder: "••••••••",
            class: "w-full px-0 py-3 border-0 border-b border-neutral-200 focus:border-neutral-900 focus:ring-0 bg-transparent text-sm placeholder-neutral-300 transition-colors" %>
      </div>

      <div class="pt-4">
        <%= f.submit "Create account →",
            class: "w-full py-4 bg-neutral-900 text-white text-sm font-medium rounded-full hover:bg-neutral-700 transition-colors cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-8 text-center text-sm text-neutral-500">
      Already have an account?
      <%= link_to "Log in", new_user_session_path, class: "text-neutral-900 hover:underline" %>
    </p>
  </div>
</div>
