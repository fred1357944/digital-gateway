<div class="min-h-[80vh] flex items-center justify-center px-6">
  <div class="w-full max-w-sm">
    <h1 class="text-3xl font-light mb-2">Welcome back</h1>
    <p class="text-sm text-neutral-500 mb-10">Log in to your account.</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

      <div>
        <%= f.label :email, "Email", class: "block text-xs text-neutral-500 uppercase tracking-wider mb-2" %>
        <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            placeholder: "you@example.com",
            class: "w-full px-0 py-3 border-0 border-b border-neutral-200 focus:border-neutral-900 focus:ring-0 bg-transparent text-sm placeholder-neutral-300 transition-colors" %>
      </div>

      <div>
        <%= f.label :password, "Password", class: "block text-xs text-neutral-500 uppercase tracking-wider mb-2" %>
        <%= f.password_field :password,
            autocomplete: "current-password",
            placeholder: "••••••••",
            class: "w-full px-0 py-3 border-0 border-b border-neutral-200 focus:border-neutral-900 focus:ring-0 bg-transparent text-sm placeholder-neutral-300 transition-colors" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between">
          <label class="flex items-center gap-2 text-sm text-neutral-500 cursor-pointer">
            <%= f.check_box :remember_me, class: "w-4 h-4 border-neutral-300 rounded text-neutral-900 focus:ring-0" %>
            Remember me
          </label>
          <%= link_to "Forgot password?", new_user_password_path, class: "text-sm text-neutral-500 hover:text-neutral-900" %>
        </div>
      <% end %>

      <div class="pt-4">
        <%= f.submit "Log in →",
            class: "w-full py-4 bg-neutral-900 text-white text-sm font-medium rounded-full hover:bg-neutral-700 transition-colors cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-8 text-center text-sm text-neutral-500">
      Don't have an account?
      <%= link_to "Create one", new_user_registration_path, class: "text-neutral-900 hover:underline" %>
    </p>
  </div>
</div>
