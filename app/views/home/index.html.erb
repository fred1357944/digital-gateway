<!-- Hero with AI Search (Airbnb style) -->
<section class="relative bg-gradient-to-b from-purple-50 to-white">
  <div class="max-w-7xl mx-auto px-6 lg:px-8 py-20 lg:py-28">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-light tracking-tight leading-[1.1] mb-6">
        找到你的<br>
        <span class="bg-gradient-to-r from-purple-600 to-pink-500 bg-clip-text text-transparent">下一個學習旅程</span>
      </h1>
      <p class="text-lg text-neutral-500 max-w-xl mx-auto mb-10 leading-relaxed">
        告訴 AI 你想學什麼，我們幫你找到最適合的課程
      </p>

      <!-- AI Search Bar -->
      <form action="/ai/search" method="get" class="max-w-2xl mx-auto" data-turbo="false">
        <input type="hidden" name="mode" value="explore">
        <div class="bg-white rounded-full shadow-xl border border-neutral-200 p-2 flex items-center">
          <div class="flex-1 px-6">
            <input type="text"
                   name="q"
                   placeholder="想學什麼？例如：Rails 入門、便宜的設計課..."
                   class="w-full py-3 text-neutral-900 placeholder-neutral-400 focus:outline-none bg-transparent">
          </div>
          <button type="submit"
                  class="p-4 rounded-full bg-gradient-to-r from-purple-600 to-pink-500 text-white hover:shadow-lg transition-shadow cursor-pointer">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </button>
        </div>
      </form>

      <!-- Quick Links -->
      <div class="flex flex-wrap justify-center gap-3 mt-6">
        <% ["程式開發", "設計", "行銷", "語言學習"].each do |topic| %>
          <%= link_to topic, ai_search_path(q: topic, mode: :explore),
              class: "px-4 py-2 text-sm text-neutral-600 bg-white/80 rounded-full border border-neutral-200 hover:border-purple-300 hover:text-purple-600 transition-colors" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Category Sections (Airbnb style) -->

<% if @featured_products.any? %>
  <!-- AI Featured -->
  <%= render 'shared/product_section',
      title: "AI 精選課程",
      subtitle: "經過 AI 分析推薦的高品質課程",
      products: @featured_products,
      link_path: ai_search_path(mode: :explore),
      link_text: "探索更多" %>
<% end %>

<% if @programming_courses.any? %>
  <!-- Programming -->
  <%= render 'shared/product_section',
      title: "熱門程式課程",
      subtitle: "Rails、JavaScript、Python 等程式開發",
      products: @programming_courses,
      link_path: ai_search_path(q: "程式", mode: :explore),
      link_text: "查看全部",
      bg_class: "bg-neutral-50" %>
<% end %>

<% if @beginner_courses.any? %>
  <!-- Beginner Friendly -->
  <%= render 'shared/product_section',
      title: "適合新手的入門課",
      subtitle: "零基礎也能輕鬆學習",
      products: @beginner_courses,
      link_path: ai_search_path(q: "入門", mode: :explore),
      link_text: "查看全部" %>
<% end %>

<% if @recent_products.any? %>
  <!-- Recent -->
  <%= render 'shared/product_section',
      title: "最新上架",
      subtitle: "剛剛加入的新課程",
      products: @recent_products,
      link_path: products_path,
      link_text: "瀏覽全部",
      bg_class: "bg-neutral-50" %>
<% end %>

<!-- Features Grid -->
