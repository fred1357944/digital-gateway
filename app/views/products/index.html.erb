<div class="max-w-7xl mx-auto px-6 lg:px-8 py-16">
  <!-- Header -->
  <div class="mb-16">
    <h1 class="text-4xl font-light mb-4">Explore</h1>
    <p class="text-neutral-500">Discover verified digital products from trusted creators.</p>
  </div>

  <!-- Filters -->
  <div class="flex items-center gap-4 mb-12 pb-6 border-b border-neutral-100">
    <span class="text-xs text-neutral-400 uppercase tracking-wider">Filter:</span>
    <button class="text-sm text-neutral-900 font-medium">All</button>
    <button class="text-sm text-neutral-400 hover:text-neutral-900 transition-colors">Courses</button>
    <button class="text-sm text-neutral-400 hover:text-neutral-900 transition-colors">E-books</button>
    <button class="text-sm text-neutral-400 hover:text-neutral-900 transition-colors">Templates</button>
    <button class="text-sm text-neutral-400 hover:text-neutral-900 transition-colors">Tools</button>
  </div>

  <!-- Products Grid -->
  <% if @products.present? %>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @products.each do |product| %>
        <%= link_to product_path(product), class: "group block" do %>
          <article class="space-y-4">
            <!-- Image -->
            <div class="aspect-[4/3] bg-neutral-100 rounded-lg overflow-hidden">
              <div class="w-full h-full flex items-center justify-center text-neutral-300 group-hover:text-neutral-400 transition-colors">
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
            </div>

            <!-- Info -->
            <div class="space-y-2">
              <div class="flex items-center gap-2">
                <span class="text-xs text-neutral-400 uppercase tracking-wider">
                  <%= product.content_type || 'Digital' %>
                </span>
                <% if product.published? %>
                  <span class="text-xs text-green-600">✓ Verified</span>
                <% end %>
              </div>
              <h3 class="text-lg font-medium group-hover:underline"><%= product.title %></h3>
              <p class="text-sm text-neutral-500 line-clamp-2"><%= truncate(product.description, length: 80) %></p>
              <div class="flex items-center justify-between pt-2">
                <span class="text-lg font-medium">NT$ <%= number_with_delimiter(product.price.to_i) %></span>
                <span class="text-xs text-neutral-400"><%= product.seller_profile&.store_name %></span>
              </div>
            </div>
          </article>
        <% end %>
      <% end %>
    </div>

    <!-- Pagination -->
    <%= pagy_tailwind_nav(@pagy) %>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-32">
      <p class="text-neutral-400 mb-8">No products yet.</p>
      <%= link_to new_seller_product_path, class: "inline-block px-6 py-3 bg-neutral-900 text-white text-sm rounded-full hover:bg-neutral-700 transition-colors" do %>
        Be the first seller →
      <% end %>
    </div>
  <% end %>
</div>
