<div class="max-w-7xl mx-auto px-6 lg:px-8 py-16">
  <!-- Header -->
  <div class="mb-16">
    <h1 class="text-4xl font-light mb-4">Explore</h1>
    <p class="text-neutral-500">Discover verified digital products from trusted creators.</p>
  </div>

  <!-- Filters -->
  <div class="flex items-center gap-4 mb-12 pb-6 border-b border-neutral-100">
    <span class="text-xs text-neutral-400 uppercase tracking-wider">Filter:</span>
    <%= link_to "All", products_path,
        class: "text-sm #{params[:type].blank? ? 'text-neutral-900 font-medium' : 'text-neutral-400 hover:text-neutral-900'} transition-colors" %>
    <% %w[course ebook template tool].each do |type| %>
      <%= link_to type.titleize.pluralize, products_path(type: type),
          class: "text-sm #{params[:type] == type ? 'text-neutral-900 font-medium' : 'text-neutral-400 hover:text-neutral-900'} transition-colors" %>
    <% end %>
  </div>

  <!-- Products Grid -->
  <% if @products.present? %>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @products.each do |product| %>
        <%= render 'shared/product_card', product: product %>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="mt-12">
      <%= pagy_tailwind_nav(@pagy) %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-32">
      <div class="w-16 h-16 bg-neutral-100 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
      </div>
      <p class="text-neutral-500 mb-6">No products yet.</p>
      <%= link_to new_seller_product_path, class: "inline-block px-6 py-3 bg-neutral-900 text-white text-sm rounded-full hover:bg-neutral-700 transition-colors" do %>
        Be the first seller â†’
      <% end %>
    </div>
  <% end %>
</div>
