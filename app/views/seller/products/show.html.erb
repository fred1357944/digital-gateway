<div class="max-w-4xl mx-auto px-6 lg:px-8 py-16">
  <!-- Header -->
  <nav class="mb-8">
    <%= link_to seller_products_path, class: "text-sm text-neutral-400 hover:text-neutral-900 flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to products
    <% end %>
  </nav>

  <div class="grid lg:grid-cols-3 gap-12">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Title & Status -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <span class="px-3 py-1 text-xs rounded-full
            <%= case @product.status
                when 'draft' then 'bg-neutral-100 text-neutral-600'
                when 'pending_review' then 'bg-yellow-50 text-yellow-700'
                when 'published' then 'bg-green-50 text-green-700'
                when 'rejected' then 'bg-red-50 text-red-700'
                end %>">
            <%= @product.status.humanize %>
          </span>
          <span class="text-xs text-neutral-400"><%= @product.content_type %></span>
        </div>
        <h1 class="text-3xl font-light"><%= @product.title %></h1>
      </div>

      <!-- Description -->
      <div class="prose prose-neutral max-w-none">
        <p class="text-neutral-600 leading-relaxed"><%= @product.description %></p>
      </div>

      <!-- Product Details -->
      <div class="p-6 bg-neutral-50 rounded-xl space-y-4">
        <h2 class="text-sm font-medium uppercase tracking-wider text-neutral-400">Details</h2>
        <dl class="grid grid-cols-2 gap-4 text-sm">
          <div>
            <dt class="text-neutral-400">Price</dt>
            <dd class="font-medium">NT$ <%= number_with_delimiter(@product.price.to_i) %></dd>
          </div>
          <div>
            <dt class="text-neutral-400">Created</dt>
            <dd><%= @product.created_at.strftime('%Y/%m/%d %H:%M') %></dd>
          </div>
          <div>
            <dt class="text-neutral-400">Content URL</dt>
            <dd class="truncate"><%= @product.content_url %></dd>
          </div>
          <% if @product.preview_url.present? %>
            <div>
              <dt class="text-neutral-400">Preview URL</dt>
              <dd class="truncate"><%= @product.preview_url %></dd>
            </div>
          <% end %>
        </dl>
      </div>

      <!-- MVT Report -->
      <% if @product.mvt_report.present? %>
        <div class="p-6 border border-neutral-200 rounded-xl space-y-4">
          <h2 class="text-sm font-medium uppercase tracking-wider text-neutral-400">MVT Quality Report</h2>
          <% report = @product.mvt_report %>
          <div class="grid grid-cols-4 gap-4 text-center">
            <div>
              <p class="text-3xl font-light"><%= (report.score_mvt * 100).round %>%</p>
              <p class="text-xs text-neutral-500">Overall</p>
            </div>
            <div>
              <p class="text-3xl font-light <%= report.score_foundations >= 0.7 ? 'text-green-600' : 'text-red-600' %>">
                <%= report.score_foundations >= 0.7 ? '✓' : '✗' %>
              </p>
              <p class="text-xs text-neutral-500">Foundations</p>
            </div>
            <div>
              <p class="text-3xl font-light <%= report.score_structure >= 0.7 ? 'text-green-600' : 'text-red-600' %>">
                <%= report.score_structure >= 0.7 ? '✓' : '✗' %>
              </p>
              <p class="text-xs text-neutral-500">Structure</p>
            </div>
            <div>
              <p class="text-3xl font-light <%= report.score_inference >= 0.7 ? 'text-green-600' : 'text-red-600' %>">
                <%= report.score_inference >= 0.7 ? '✓' : '✗' %>
              </p>
              <p class="text-xs text-neutral-500">Logic</p>
            </div>
          </div>
          <% if report.feedback.present? %>
            <p class="text-sm text-neutral-600 pt-4 border-t border-neutral-100"><%= report.feedback %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Sidebar Actions -->
    <div class="space-y-4">
      <div class="sticky top-24 p-6 border border-neutral-200 rounded-xl space-y-4">
        <h2 class="text-sm font-medium uppercase tracking-wider text-neutral-400">Actions</h2>

        <%= link_to edit_seller_product_path(@product),
            class: "block w-full py-3 text-center bg-neutral-900 text-white text-sm rounded-lg hover:bg-neutral-700 transition-colors" do %>
          Edit product
        <% end %>

        <% if @product.draft? %>
          <%= button_to "Submit for review",
              submit_review_seller_product_path(@product),
              method: :post,
              class: "w-full py-3 text-center border border-neutral-200 text-sm rounded-lg hover:border-neutral-900 transition-colors" %>
        <% end %>

        <% if @product.published? %>
          <%= link_to product_path(@product),
              target: "_blank",
              class: "block w-full py-3 text-center border border-neutral-200 text-sm rounded-lg hover:border-neutral-900 transition-colors" do %>
            View public page ↗
          <% end %>
        <% end %>

        <%= button_to "Delete",
            seller_product_path(@product),
            method: :delete,
            data: { turbo_confirm: "Are you sure you want to delete this product?" },
            class: "w-full py-3 text-center text-red-600 text-sm hover:underline" %>
      </div>
    </div>
  </div>
</div>
