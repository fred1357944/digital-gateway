<%#
  AI 點數徽章

  使用方式 (在 navbar 中):
    <%= render 'shared/credits_badge' if user_signed_in? %>
%>

<% if user_signed_in? %>
  <%= link_to ai_usage_path,
      class: "flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium transition-colors #{credits_badge_class(current_user.ai_credits)}" do %>

    <% if current_user.byok? %>
      <!-- BYOK 用戶顯示金鑰圖示 -->
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
      </svg>
      <span>自有 API</span>
    <% else %>
      <!-- 一般用戶顯示點數 -->
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
      <span><%= current_user.ai_credits %> 點</span>
    <% end %>

  <% end %>
<% end %>
